import 'package:flutter/material.dart';
import 'package:travel_app/Pages/HomePage_Featurs/Event/Components/Support.dart';

class EventCard extends StatelessWidget {
  final String imagePath;
  final String title;
  final String date;
  final bool isSelected;
  final VoidCallback onTap;

  const EventCard({
    required this.imagePath,
    required this.title,
    required this.date,
    required this.isSelected,
    required this.onTap,
  });

  @override
  Widget build(BuildContext context) {
    return GestureDetector(
      onTap: onTap,
      child: Material(
        elevation: 5.0,
        borderRadius: BorderRadius.circular(10),
        child: Container(
          decoration: BoxDecoration(
            color: isSelected ? Color.fromARGB(255, 95, 198, 221) : Colors.white,
            borderRadius: BorderRadius.circular(10),
          ),
          padding: const EdgeInsets.all(8),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.center,
            mainAxisAlignment: MainAxisAlignment.spaceBetween,
            children: [
              Image.asset(imagePath, height: 100, width: 300, fit: BoxFit.cover),
              Text(title, style: AppWidget.semiBooldTextFieldStyle()),
              Row(
                children: [
                  Text(date, style: AppWidget.LightTextFeildStyle()),
                  Spacer(),
                  Container(
                    padding: const EdgeInsets.all(3),
                    decoration: BoxDecoration(
                      color: Color.fromARGB(255, 126, 128, 125),
                      borderRadius: BorderRadius.circular(8),
                    ),
                    child: const Icon(
                      Icons.bookmark,
                      color: Color.fromARGB(255, 255, 255, 255),
                    ),
                  ),
                ],
              ),
            ],
          ),
        ),
      ),
    );
  }
}